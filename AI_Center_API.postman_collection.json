{
  "info": {
    "name": "AI Center API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api"
    },
    {
      "key": "token",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "if (jsonData.token) {",
                  "    pm.collectionVariables.set('token', jsonData.token);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "email", "value": "admin@aicenter.vn" },
                { "key": "password", "value": "123456" }
              ]
            },
            "url": "{{baseUrl}}/auth/login"
          }
        },
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "name", "value": "Test User" },
                { "key": "email", "value": "test@gmail.com" },
                { "key": "password", "value": "123456" }
              ]
            },
            "url": "{{baseUrl}}/auth/register"
          }
        },
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/auth/profile"
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "name", "value": "New Name" }
              ]
            },
            "url": "{{baseUrl}}/auth/profile"
          }
        },
        {
          "name": "Change Password",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "currentPassword", "value": "123456" },
                { "key": "newPassword", "value": "newpass123" }
              ]
            },
            "url": "{{baseUrl}}/auth/change-password"
          }
        }
      ]
    },
    {
      "name": "Courses",
      "item": [
        {
          "name": "Get All Courses",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/courses"
          }
        },
        {
          "name": "Get Course by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/courses/:id"
          }
        },
        {
          "name": "Create Course (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "title", "value": "Khóa học AI cơ bản" },
                { "key": "description", "value": "Mô tả khóa học" },
                { "key": "price", "value": "5000000" },
                { "key": "duration", "value": "3 tháng" }
              ]
            },
            "url": "{{baseUrl}}/courses"
          }
        },
        {
          "name": "Update Course (Admin)",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "title", "value": "Khóa học AI nâng cao" }
              ]
            },
            "url": "{{baseUrl}}/courses/:id"
          }
        },
        {
          "name": "Delete Course (Admin)",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/courses/:id"
          }
        }
      ]
    },
    {
      "name": "News",
      "item": [
        {
          "name": "Get All News",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/news"
          }
        },
        {
          "name": "Get News by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/news/:id"
          }
        },
        {
          "name": "Create News (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "title", "value": "Tin tức mới" },
                { "key": "content", "value": "Nội dung tin tức" },
                { "key": "summary", "value": "Tóm tắt" }
              ]
            },
            "url": "{{baseUrl}}/news"
          }
        }
      ]
    },
    {
      "name": "Registrations",
      "item": [
        {
          "name": "Register Course",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "courseId", "value": "" }
              ]
            },
            "url": "{{baseUrl}}/registrations"
          }
        },
        {
          "name": "My Registrations",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/registrations/my-registrations"
          }
        },
        {
          "name": "All Registrations (Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/registrations/all"
          }
        },
        {
          "name": "Update Status (Admin)",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "status", "value": "approved" }
              ]
            },
            "url": "{{baseUrl}}/registrations/:id/status"
          }
        }
      ]
    },
    {
      "name": "Feedback",
      "item": [
        {
          "name": "Send Feedback",
          "request": {
            "method": "POST",
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "name", "value": "Nguyen Van A" },
                { "key": "email", "value": "test@gmail.com" },
                { "key": "message", "value": "Nội dung phản hồi" }
              ]
            },
            "url": "{{baseUrl}}/feedbacks"
          }
        },
        {
          "name": "Get All Feedbacks (Admin)",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/feedbacks"
          }
        }
      ]
    },
    {
      "name": "Partners",
      "item": [
        {
          "name": "Get All Partners",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/partners"
          }
        },
        {
          "name": "Create Partner (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "name", "value": "Partner Name" },
                { "key": "website", "value": "https://partner.com" }
              ]
            },
            "url": "{{baseUrl}}/partners"
          }
        }
      ]
    },
    {
      "name": "Team",
      "item": [
        {
          "name": "Get All Members",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/team"
          }
        },
        {
          "name": "Get Member by ID",
          "request": {
            "method": "GET",
            "url": "{{baseUrl}}/team/:id"
          }
        }
      ]
    },
    {
      "name": "Notifications",
      "item": [
        {
          "name": "My Notifications",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/notifications/my"
          }
        },
        {
          "name": "Mark as Read",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/notifications/:id/read"
          }
        },
        {
          "name": "Send to User (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "userId", "value": "" },
                { "key": "title", "value": "Thông báo" },
                { "key": "message", "value": "Nội dung thông báo" }
              ]
            },
            "url": "{{baseUrl}}/notifications/send"
          }
        },
        {
          "name": "Send to All (Admin)",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "title", "value": "Thông báo chung" },
                { "key": "message", "value": "Nội dung thông báo" }
              ]
            },
            "url": "{{baseUrl}}/notifications/send-all"
          }
        }
      ]
    },
    {
      "name": "Admin",
      "item": [
        {
          "name": "Dashboard Stats",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/admin/stats"
          }
        },
        {
          "name": "Get All Users",
          "request": {
            "method": "GET",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/admin/users"
          }
        },
        {
          "name": "Update User Role",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "body": {
              "mode": "urlencoded",
              "urlencoded": [
                { "key": "role", "value": "admin" }
              ]
            },
            "url": "{{baseUrl}}/admin/users/:id/role"
          }
        },
        {
          "name": "Reset User Password",
          "request": {
            "method": "PATCH",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/admin/users/:id/reset-password"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{token}}" }
            ],
            "url": "{{baseUrl}}/admin/users/:id"
          }
        }
      ]
    }
  ]
}
